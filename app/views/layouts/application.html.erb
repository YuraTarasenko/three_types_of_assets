<!DOCTYPE html>
<html>
  <head>
    <title>ThreeTypesOfAssets</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if manager_signed_in? %>
      <span>Hi, <%= current_manager.email %></span>
      <%= link_to 'Logout', destroy_manager_session_path, :method => :delete %> | <%= link_to "Home", root_path %>

    <% else %>
      <%= link_to 'Login', new_manager_session_path %> | <%= link_to 'Register', new_manager_registration_path %>
    <% end %>

    <%= yield %>
  </body>
</html>
